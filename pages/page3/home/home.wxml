<cu-custom bgColor="bg-gradual-blue">
  <view slot="content">我的</view>
</cu-custom>
<view class="bg-img bg-mask padding-tb-xl" style="background-image: url('https://ossweb-img.qq.com/images/lol/web201310/skin/big10006.jpg');height: 414rpx;">
  <view class="padding-xl text-white">
    <view class="padding-xs text-xl">
      {{ personInfo.nickName }}
    </view>
    <view class="padding-xs">
      Only the guilty need fear me.
    </view>
  </view>
</view>
<view class="cu-list menu sm-border">
    <view class="cu-item arrow">
      <navigator class="content" hover-class="none" url="/pages/page3/personInfo/personInfo" open-type="navigate">
        <text class="cuIcon-circlefill text-grey"></text>
        <text class="text-grey">编辑资料</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <view class="content">
        <image src="/images/logo.png" class="png" mode="aspectFit"></image>
        <text class="text-grey">钱包</text>
      </view>
    </view>
    <view class="cu-item arrow">
      <button class="cu-btn content">
        <text class="cuIcon-btn text-olive"></text>
        <text class="text-grey">优惠券</text>
      </button>
    </view>
    <view class="cu-item {{menuArrow?'arrow':''}}">
      <navigator class="content" hover-class="none" url="/pages/page3/about/about" open-type="navigate">
        <text class="cuIcon-discoverfill text-orange"></text>
        <text class="text-grey">Navigator 跳转</text>
      </navigator>
    </view>
    <view class="cu-item arrow">
      <view class="content">
        <text class="cuIcon-tagfill text-red"></text>
        <text class="text-grey">标签</text>
      </view>
      <view class="action">
        <view class="cu-tag round bg-orange light">音乐</view>
        <view class="cu-tag round bg-olive light">电影</view>
        <view class="cu-tag round bg-blue light">旅行</view>
      </view>
    </view>
    <view class="cu-item arrow">
      <view class="content" bindtap="feedBack">
        <text class="cuIcon-circlefill text-grey"></text>
        <text class="text-grey">建议/反馈</text>
      </view>
    </view>
  </view>
